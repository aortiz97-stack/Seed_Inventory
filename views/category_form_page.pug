extends layout



block content
  header
    h1= title
  main
    form(method='POST' action='')
        .form-group
            label(for='name') Name 
            input#name(type='text' required='true' value=(undefined===category ? '' : category.name))
        
        .form-group 
            label(for='description') Description 
            textarea#description(value=(undefined===category ? '' : category.description))
        
        button.submit-button(type='submit') Submit
    
    if errors
        ul
        for error in errors
            li!= error.msg

  footer